<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>URL Shortener</title>
  <style>
    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #74ebd5 0%, #9face6 100%);
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: flex-start;
    }

    .container {
      background: #fff;
      width: 90%;
      max-width: 900px;
      margin-top: 40px;
      padding: 30px;
      border-radius: 20px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      animation: fadeIn 1s ease-in-out;
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
      font-size: 2.2rem;
      letter-spacing: 1px;
      animation: slideDown 1s ease;
    }

    form {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-bottom: 20px;
    }

    input[type="text"] {
      padding: 10px;
      width: 60%;
      border-radius: 10px;
      border: 1px solid #ccc;
      font-size: 1rem;
      transition: 0.3s;
    }

    input[type="text"]:focus {
      border-color: #6c63ff;
      box-shadow: 0 0 8px rgba(108, 99, 255, 0.4);
      outline: none;
    }

    button {
      padding: 10px 20px;
      background: #6c63ff;
      color: #fff;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      cursor: pointer;
      transition: 0.3s;
    }

    button:hover {
      background: #5146d9;
      transform: scale(1.05);
    }

    .new-id {
      text-align: center;
      background: #f0f4ff;
      padding: 15px;
      border-radius: 12px;
      margin-bottom: 20px;
      font-size: 1.1rem;
      color: #333;
      animation: popIn 0.7s ease;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      animation: fadeIn 1.5s ease;
    }

    th, td {
      border: 1px solid #e0e0e0;
      padding: 12px;
      text-align: center;
      font-size: 0.95rem;
    }

    th {
      background: #6c63ff;
      color: #fff;
      letter-spacing: 0.5px;
    }

    tr {
      transition: background 0.3s, transform 0.2s;
    }

    tr:hover {
      background: #f9f9ff;
      transform: scale(1.01);
    }

    a {
      color: #6c63ff;
      text-decoration: none;
      transition: 0.3s;
    }

    a:hover {
      text-decoration: underline;
      color: #5146d9;
    }

    /* Animations */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes slideDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes popIn {
      0% { transform: scale(0.8); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>ðŸš€ URL Shortener</h1>

    <form method="POST" action="/url">
      <input type="text" name="url" placeholder="Enter your URL" required>
      <button type="submit">Generate</button>
    </form>

    <% if (newShortID) { %>
      <div class="new-id">
        <p>Your short id is: <strong><%= newShortID %></strong></p>
        <p>Access it via: 
          <a href="/<%= newShortID %>" target="_blank">
            http://localhost:8001/<%= newShortID %>
          </a>
        </p>
      </div>
    <% } %>

    <table>
      <tr>
        <th>Sr No</th>
        <th>Short ID</th>
        <th>Redirect URL</th>
        <th>Visit Count</th>
      </tr>
      <% urls.forEach((url, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><a href="/<%= url.shortID %>" target="_blank"><%= url.shortID %></a></td>
          <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
          <td><%= url.visitHistory.length %></td>
        </tr>
      <% }) %>
    </table>
  </div>
</body>
</html>
